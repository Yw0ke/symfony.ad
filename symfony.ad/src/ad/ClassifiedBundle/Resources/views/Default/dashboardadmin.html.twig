{% extends "::layout.html.twig" %}

{% block body %}
<div class="row">
	<div class="span9">
		{% if ads %}
		<table class="table table-bordered table-striped table-condensed">
		<caption>
	    	<h4>Annonces en attentes de confirmation de votre part.</h4>
	   	</caption>
	   		<thead>
	      	<tr>
	      		{% for ad in ads %}
	        	<th>{{ ad.attributeId.name }}</th>
	        	{% endfor %}
	            <th colspan="2">Actions</th>
	      	</tr>
		   	</thead>
			<tbody>
				
		        <tr>
		            {% for ad in ads %}
		            	<td>{{ ad.value }}</td>
		           		{% if loop.last %}
		           		<td><a class="icon-eye-open center block" href=""></a></td>
		            	<td><a class="icon-ok center block" href="{{ path('ad_confirm_ads', { 'id': ad.AdsId.id, 'dash' : 1 }) }}"></a></td>
		           		{% endif %}
		            {% endfor %}
		            
		        </tr>
				
			</tbody>
		</table>
		{% else %}
		<p>Aucune annonce non valider.</p>
		{% endif %}
	</div>
	
	<aside class="span3">
		<ul>
			<li><a href="{{ path('ad_manage_ads') }}">Gérer les annonces</a></li>
			<li>Gérer les catégories</li>
			<li>Gérer les utilisateurs</li>
		</ul>
	</aside>
</div>
{% endblock %}